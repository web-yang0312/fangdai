.banner{
    width: 100%;
    height:459rpx;
    background: #0C8EE6;
    overflow:hidden;
}
.banner .top{
    height:118rpx;
    width:100%;
    position: relative;
}
.top .top-content{
    width:558rpx;
    height:58rpx;
    border:3rpx solid #FFFFFF;
    position:absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
    margin:auto;
    border-radius:15rpx ;
}
.top-content .benjin{
    width: 50%;
    height: 100%;
    line-height: 58rpx;
    color:#3981AB;
    background: #ffffff;
    text-align: center;
    float: left;
}
.top-content .benxi{
    width: 50%;
    height: 100%;
    line-height: 58rpx;
    color:#ffffff;
    text-align: center;
    float: left;
}
.banner .zhong{
    height:175rpx;
    width:100%;
    position: relative;
}   
.zhong .can{
    height:175rpx;
    width:50%;
    float:left;
}
.zhong .cankao{
    height:70rpx;
    width:100%;
    line-height:70rpx;
    color:#ffffff;
    padding-left:30rpx;
    font-size:14px;
}
.zhong .shuzi{
    height:105rpx;
    width:100%;
    line-height:105rpx;
    color:#ffffff;
    padding-left:30rpx;
    font-size:30px;
   }
.zhong .jian{
    height:175rpx;
    width:50%;
    float:left;
}
.banner .bottom{
    margin-top:5rpx;
    height:131rpx;
    width:100%;
    position: relative;
}   
.bottom .lixi{
    height:131rpx;
    width:50%;
    float:left;
    border-right:1px solid #FFFFFF;
    box-sizing:border-box;
}
.bottom .title{
    height:41rpx;
    width:100%;
    line-height:41rpx;
    color:#ffffff;
    padding-left:30rpx;
    font-size:14px;
    box-sizing:border-box;
}
.bottom .shuzi1{
    height:90rpx;
    width:100%;
    line-height:90rpx;
    color:#ffffff;
    padding-left:30rpx;
