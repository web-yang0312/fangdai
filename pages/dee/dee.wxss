    box-sizing:border-box;
   }
.bottom .huankuan{
    height:131rpx;
    width:50%;
    float:left;
}
.denge{
    width: 100%;
    height:76rpx;
    background: #e9f4f6;
    color:#727C7D;
    font-size:14px;
    text-align: center;
    line-height: 76rpx;
}
.list{
    padding-left:36rpx;
    overflow: hidden;
}
.list .list-list{
    width:100%;
    height:100rpx;
    position: relative;
    border-bottom:1px solid #e6e6e6;
}
.list-list .kind{
    color: #323232;
    font-size:16px;
    line-height: 100rpx;
    float: left;
}
.list-list .gongneng{
    color: #939393;
    font-size:16px;
    line-height: 100rpx;
    float: right;
    padding-right:36rpx;
}
.gongneng input{
    position: absolute;
    top:0;
    right:36rpx;
    bottom:0;
    height: 100%;
    text-align: right;
    line-height: 100rpx;
    margin: auto;
}
.cal{
    width: 100rpx;
    height:100rpx;
    position: fixed;
    bottom: 50rpx;
    right:50rpx;
    background: #0C8EE6;
    color: #ffffff;
    border-radius: 50%;
    text-align: center;
}